<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper1"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="330dp"
        android:layout_height="53dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="520dp"
        android:gravity="center_horizontal"
        android:shadowColor="#FFFFFF"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="1"
        android:text="Aplicatie COVID-19, UPIT, INFO3, Munteanu Irina-Erika"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/info"
        android:layout_width="280dp"
        android:layout_height="90dp"
        android:layout_marginBottom="400dp"
        android:gravity="center"
        android:text="Informatii despre virus"
        app:backgroundTint="#E91E47"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/testare"
        android:layout_width="280dp"
        android:layout_height="90dp"
        android:layout_marginBottom="290dp"
        android:gravity="center"
        android:text="Testare"
        app:backgroundTint="#E91E47"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/unitati"
        android:layout_width="280dp"
        android:layout_height="90dp"
        android:layout_marginBottom="180dp"
        android:lineSpacingExtra="8sp"
        android:text="Unitati sanitare cu suport COVID-19 din judetul Arges"
        app:backgroundTint="#E91E47"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/chestionar"
        android:layout_width="280dp"
        android:layout_height="90dp"
        android:layout_marginBottom="70dp"
        android:lineSpacingExtra="8sp"
        android:text="Chestionar simptome COVID-19"
        app:backgroundTint="#E91E47"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>